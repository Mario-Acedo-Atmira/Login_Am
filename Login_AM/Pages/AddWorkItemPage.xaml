<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_AM.Pages.AddWorkItemPage"
             Title="AddWorkItemPage">
    <ContentPage.Content>
        <VerticalStackLayout x:Name="layout">
            <Label Text="Título"  Margin="5,10,0,0" TextColor="Black"/>
            <Entry  x:Name="txt_titulo" Placeholder="Introduce el título" Margin="5,0,0,0"></Entry>
            <Label Text="Descripción"  Margin="5,10,0,0" TextColor="Black"/>
            <Entry Placeholder="Introduce la descripción" x:Name="txt_descripcion" Margin="5,0,0,0"></Entry>
            <Button Text="Subir Imagen" Clicked="Button_Clicked"></Button>
            <Button Text="Añadir" Clicked="AddWorkItem_Clicked"></Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>