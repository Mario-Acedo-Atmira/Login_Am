<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Login_AM"
             x:Class="Login_AM.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout>
        <Label Text="Introduce tu email"/>
        <Editor x:Name="txt_email" Placeholder="Introduce tu email"/>
        <Label Text="Introduce tu contraseña" />
        <Editor x:Name="txt_pass"  Placeholder="Introduce tu contraseña"/>
        <HorizontalStackLayout>
            <Button Text="Registrase" Clicked="Registro"/>
            <Button Text="Iniciar Sesión" Clicked="Loguearse"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
